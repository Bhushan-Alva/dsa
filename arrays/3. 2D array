#include <stdio.h>
#include <stdlib.h>

void main()
{
    // In 2d array values are stored in contigous address i.e. in 1d
    //a. In stack
    int A[3][4] = {{1, 2, 3, 4}, {2, 4, 6, 8}, {1, 3, 5, 7}};
    for(int i=0; i<3; i++)
    {
        for(int j=0; j<4; j++)
        {
            printf("%d: %d\n", A[i][j], &A[i][j]);
        }
    }

    //b. In heap
    int *B[3];
    B[0] = (int *)malloc(4 * sizeof(int));
    B[1] = (int *)malloc(4 * sizeof(int));
    B[2] = (int *)malloc(4 * sizeof(int));
    B[1][2] = 5;
    printf("%d", B[1][2]);
    for(int i=0; i<3; i++)
    {
        for(int j=0; j<4; j++)
        {
            printf("%d: %d\n", B[i][j], &B[i][j]);
        }
    }
}
