#include<stdio.h>
void main()
{
  //a. Only declaration of array
  int A[5];
  for(int i=0; i<5; i++)
  {
    printf("%d\t", A[i]);
  }

  //b. Declaration and initialization of array
  int B[5] = {2, 3, 5, 6, 8};
  printf("\n");
  for(int i=0; i<5; i++)
  {
    printf("%d\t", B[i]);
  }

  //c. Initializing all values of array to zero
  int C[5] = {1};
  printf("\n");
  for(int i=0; i<5; i++)
  {
    printf("%d\t", C[i]);
  }
  
  //d. Initializing some values of array
  int D[5] = {1, 3, 5};
  printf("\n");
  for(int i=0; i<5; i++)
  {
    printf("%d\t", D[i]);
  }

  //e. Initializing values of array without limit
  int E[] = {1, 3, 5, 8, 4};
  printf("\n");
  for(int i=0; i<5; i++)
  {
    printf("%d\t", E[i]);
  }
  
  //f. Ways of accessing elements in array
  printf("\n");
  for(int i=0; i<5; i++)
  {
    printf("%d\t", B[i]);
  }
  printf("\n");
  for(int i=0; i<5; i++)
  {
    printf("%d\t", i[B]);
  }
  printf("\n");
  for(int i=0; i<5; i++)
  {
    printf("%d\t", *(B+i));
  }
  
  //g. check the address of array
  int p[5];
  for(int i=0; i<5; i++)
  {
      printf("%d\t", &p[i]);
  }
}
